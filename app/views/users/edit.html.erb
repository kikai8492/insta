<div class="container">
	<div class="row login_box">
	      <div class="col-md-12 col-xs-12 login_control">
        <div class="outter"></div>   
          <%= form_with(model: @user, local: true) do |f| %>
            <div class="col-md-12 col-xs-12" align="center">
              <p>
                <strong>Image:</strong>
                <%= image_tag @user.image.url, size:"160x160" %>
              </p>
              <%= f.label :image, class:"image-circle"%>
              <%= f.file_field :image, class:"image-circle"%>
            </div>

            <div class="control">
              <%= f.label :name, class:"label"%>
              <%= f.text_field :name, class: "form-control", placeholder: "Name"%>
            </div>

            <div class="control">
              <%= f.label :email, class:"label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Email"%>
            </div>
            
            <div class="control">
              <%= f.label :password, class:"label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>

            <div class="control">
              <%= f.label :password_confirmation, class:"label" %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password_Confirmation" %>
            </div>
            <div align="center">
              <%= f.submit "Update Account!", class:"btn btn-primary"%>
              <%= link_to "戻る", user_path%>
            </div>
          <% end %>  
        </div>
    </div>
</div>